<?php echo $this->doctype() . PHP_EOL ?>
<html lang="en">
    <head>
<?php
    echo $this->headTitle($this->translate('global_application_name'))
        ->setIndent(8)
        ->setSeparator(' :: ')
        ->setAutoEscape(false);

    echo PHP_EOL;
    
    echo $this->headMeta()
        ->appendName('viewport', 'width=device-width, initial-scale=1, shrink-to-fit=no')
        ->appendName('charset', 'utf-8')
        ->setIndent(8)
        ->appendHttpEquiv('X-UA-Compatible', 'IE=edge');

    echo PHP_EOL;
    
    // Add CSS
    $bootstrapMinCss = $this->config->layout->css->bootstrapMin;
    echo $this->headLink()
        ->setIndent(8)
        ->appendStylesheet(
            $bootstrapMinCss->href,
            'screen',
            '',
            ['integrity' => $bootstrapMinCss->integrity, 'crossorigin' => $bootstrapMinCss->crossorigin]
        )
        ->appendStylesheet('css/style.css');
    
    echo PHP_EOL;
?>
    </head>
    <body style="background: url('<?php echo $this->defaultBackground ?>') top center no-repeat" class="container">
<?php
    // Main menu
    echo $this->placeholder('mainmenu')
        ->setIndent(8)
        ->set(
            $this->mainMenu()->render(!empty($this->authenticatedUser))
        );
    
    echo PHP_EOL;
?>
        <div id="alert-container">
<?php
    if (isset($this->flashMessage)) {
        echo $this->placeholder('flashMessage')
            ->setIndent(12)
            ->set($this->alertMessage()->render($this->flashMessage));
        
        echo PHP_EOL;
    }
?>
        </div>
        <div id="header" class="pt-2 pb-2">
            <p>header text</p>
        </div>
        <div id="content">
<?php echo $this->placeholder('content')->set($this->content)->setIndent(8) . PHP_EOL ?>
        </div>
        <div>
            footer
        </div>
<?php
    //Login modal, only if not logged in
    if (empty($this->authenticatedUser)) {
        echo $this->placeholder('loginmodal')
            ->setIndent(8)
            ->set(
                $this->modal()->renderLoginModal($this->config->layout->oAuthUrl)
            );
        echo PHP_EOL;
    }
?>
<?php
    // Add JS
    $jquerySlimMinJs = $this->config->layout->js->jquerySlimMin;
    $tetherMinJs = $this->config->layout->js->tetherMin;
    $bootstrapMinJs = $this->config->layout->js->bootstrapMin;
    echo $this->headScript()
        ->setIndent(8)
        ->setAllowArbitraryAttributes(true) // This is needed for the "integrity" attribute, which is not supported as of Feb 2017
        ->appendFile($jquerySlimMinJs->src, 'text/javascript', ['integrity' => $jquerySlimMinJs->integrity, 'crossorigin' => $jquerySlimMinJs->crossorigin])
        ->appendFile($tetherMinJs->src, 'text/javascript', ['integrity' => $tetherMinJs->integrity, 'crossorigin' => $tetherMinJs->crossorigin])
        ->appendFile($bootstrapMinJs->src, 'text/javascript', ['integrity' => $bootstrapMinJs->integrity, 'crossorigin' => $bootstrapMinJs->crossorigin]);
    
    echo PHP_EOL;
?>
    </body>
</html>